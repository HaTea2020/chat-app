<div class="main_top">
  <div class=main_room_name>hogefuga</div>
  <div class="chat_fin">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="main_center">
  <div class="messages">
    <div class="upper-message">
      <div class="name">Tom</div>
      <div class="time">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="lower-message">
      <div class="message">おはよう</div>
    </div>
  </div>
  <div class="messages">
    <div class="upper-message">
      <div class="name">Sim</div>
      <div class="time">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="lower-message">
      <div class="message">こんばんは</div>
    </div>
  </div>
</div>
  <%= form_with model: [@room, @message], html: {class: "main_under"}, local: true do |f|%>
    <div class=send_message>
      <%= f.text_field :content, class: 'form_message', placeholder: 'type a message'%>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden'%>
      </label>
    </div>
    <%=f.submit '送信', class: 'form_submit'%>
  <%end%>

